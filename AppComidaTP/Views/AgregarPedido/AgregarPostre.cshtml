@model IEnumerable<Postre>

<h1><label>LISTA DE POSTRES</label></h1>
@foreach (var postre in Model)
{
    <div class="container">
        <div class="row" style="margin-top:10px">
            <div class="col-2">
                <img src="@postre.Link" style="width:80px; height:70px">
            </div>
            <div class="col-6" style="text-align:left">
                <div class="row">
                    <label><b>@postre.Nombre</b></label>
                </div>
                <div class="row">
                    <label>$@postre.Precio</label>
                </div>
            </div>
            <div class="col-2">
                <a asp-action="AgregarCliente" asp-route-codigo="@postre.Codigo" class="btn btn-outline-warning">ESCOGER</a>
            </div>
        </div>
    </div>
    
}
<a asp-action="AgregarCliente" class="btn btn-outline-warning" style="margin-top:10px">SIGUIENTE</a>