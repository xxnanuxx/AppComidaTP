@model IEnumerable<Bebida>
<body style="background-color:#FF3730">
    <h1><label style="font-family:fantasy; font-size:60px">AGREGAR BEBIDA</label></h1>
    @foreach (var bebida in Model)
    {
        <div class="container" style="margin-top:30px">
            <div class="row" style="margin-top:10px">
                <div class="col-sm-2 col-md-2 col-lg-1">
                    <img src="@bebida.Link" style="width:80px; height:70px">
                </div>
                <div class="col-6" style="text-align:left; font-size:20px">
                    <div class="row">
                        <label><b>@bebida.Nombre</b></label>
                    </div>
                    <div class="row">
                        <label><i>$@bebida.Precio</i></label>
                    </div>
                </div>
                <div class="col-2">
                    <a asp-action="AgregarPostre" asp-route-codigo="@bebida.Codigo" class="btn btn-dark">ESCOGER</a>
                </div>
            </div>
        </div>
    }
    <a asp-action="AgregarPostre" class="btn btn-dark" style="margin-top:10px">SIGUIENTE</a>
</body>